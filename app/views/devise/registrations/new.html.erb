<div class="row">
  <div class="col-sm-offset-1 col-sm-12">
<h2>ユーザー登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<table class='table'>
<thead>

  <div class="field form-group col-sm-9">
    <%= f.label :name, "ニックネーム",  class: "col-sm-4 control-label" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" , class: "col-sm-4 form-control-label" %>
  </div>

  <div class="field form-group col-sm-9">
    <%= f.label :email, "メールアドレス", class: "col-sm-4 control-label" %>
    <%= f.email_field :email, autocomplete: "email", class: "col-sm-4 control-label" %>
  </div>

  <div class="field form-group col-sm-9">
  <div class="col-sm-4 control-label">
   <%= f.label :password, "パスワード" %>
   <% if @minimum_password_length %>
    <b>(<%= @minimum_password_length %>文字以上)</b>
    <% end %>
  </div>
    <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-4 control-label" %>
  </div>

  <div class="field form-group col-sm-9">
    <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-sm-4 control-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-4 control-label" %>
  </div>

</thead>
</table>
  <div class="actions col-sm-6">
    <%= f.submit "新規登録",class: 'btn btn-success col-xs-5 pull-right'  %>
  </div>
<% end %>
</div>
</div>
